<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kmucs.echoet_app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEarth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="0"
        android:scaleX="1.65"
        android:scaleY="1.65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/earth001" />

    <ImageView
        android:id="@+id/imageFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:rotation="0"
        android:scaleX="1"
        android:scaleY="1"
        android:transformPivotX="64dp"
        android:transformPivotY="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageEarth"
        app:layout_constraintLeft_toLeftOf="@+id/imageEarth"
        app:layout_constraintRight_toRightOf="@+id/imageEarth"
        app:layout_constraintTop_toTopOf="@+id/imageEarth"
        app:srcCompat="@drawable/fat001" />




</android.support.constraint.ConstraintLayout>
