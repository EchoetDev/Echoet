<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kmucs.echoet_app.EarthFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePerson"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/person"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <ImageView
            android:id="@+id/imagePointbar"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:paddingLeft="20dp"
            android:src="@drawable/pointbar" />

        <ImageView
            android:id="@+id/imageCalendar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/calendar" />

        <TextView
            android:id="@+id/textTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="21dp"
            android:text="0그루"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="56dp"
            android:text="0kcal"
            android:textColor="@android:color/white" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageEarth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="0"
            android:scaleX="1.65"
            android:scaleY="1.65"
            android:src="@drawable/earth001" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="130dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            android:transformPivotX="64dp"
            android:transformPivotY="128dp"
            android:src="@drawable/fat001" />
    </FrameLayout>
</LinearLayout>
